{
    "env": {
        "browser": true,
        "es2021": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "project": "tsconfig.json",
        "sourceType": "module"
    },
    "overrides": [
        {
            "files": ["*.jsx", "*.js, *.tsx", "*.ts"]
        }
    ],
    "plugins": ["react", "import", "@typescript-eslint/eslint-plugin", "typescript-sort-keys", "sort-destructure-keys"],
    "extends": [
        "plugin:react/recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:prettier/recommended",
        "plugin:@typescript-eslint/eslint-recommended",
        "plugin:typescript-sort-keys/recommended"
    ],
    "root": true,
    "ignorePatterns": [".eslintrc"],
    "rules": {
        "prettier/prettier": [
            "warn",
            {},
            {
                "usePrettierrc": true
            }
        ],
        "@typescript-eslint/no-unused-vars": "off",
        "@typescript-eslint/explicit-function-return-type": "off",
        "@typescript-eslint/explicit-member-accessibility": [
            "warn",
            {
                "overrides": {
                    "constructors": "no-public",
                    "methods": "explicit",
                    "properties": "off",
                    "parameterProperties": "explicit"
                }
            }
        ],
        "@typescript-eslint/explicit-module-boundary-types": "off",
        "@typescript-eslint/interface-name-prefix": "off",
        "@typescript-eslint/no-empty-interface": "off",
        "@typescript-eslint/no-explicit-any": "off",
        "arrow-parens": ["warn", "always"],
        "sort-destructure-keys/sort-destructure-keys": 2,
        "typescript-sort-keys/interface": "off",
        "typescript-sort-keys/string-enum": "warn",
        "import/order": [
            "warn",
            {
                "alphabetize": {
                    "caseInsensitive": true,
                    "order": "asc"
                },
                "groups": [["builtin", "external"], "internal", "parent", "sibling", "index"],
                "newlines-between": "always",
                "pathGroups": [{ "group": "internal", "pattern": "@/**" }],
                "pathGroupsExcludedImportTypes": []
            }
        ],
        "import/prefer-default-export": "off",
        "max-classes-per-file": ["warn", 3],
        "no-console": "warn",
        "no-duplicate-imports": "warn",
        "no-empty-pattern": "warn",
        "no-return-await": "warn",
        "require-await": "warn",
        "no-trailing-spaces": "warn",
        "object-shorthand": "error",
        "lines-between-class-members": ["warn", "always", { "exceptAfterSingleLine": true }],
        "padding-line-between-statements": [
            "warn",
            { "blankLine": "any", "next": "*", "prev": ["const", "let"] },
            { "blankLine": "always", "next": "class", "prev": "*" },
            { "blankLine": "always", "next": "export", "prev": "*" },
            { "blankLine": "any", "next": "export", "prev": "export" },
            { "blankLine": "always", "next": "for", "prev": "*" },
            { "blankLine": "always", "next": "function", "prev": "*" },
            { "blankLine": "any", "next": "if", "prev": "*" },
            { "blankLine": "always", "next": "*", "prev": "if" },
            { "blankLine": "always", "next": "return", "prev": "*" },
            { "blankLine": "always", "next": "switch", "prev": "*" },
            { "blankLine": "always", "next": "try", "prev": "*" },
            { "blankLine": "always", "next": "while", "prev": "*" },
            { "blankLine": "any", "next": ["const", "let"], "prev": ["const", "let"] }
        ]
    },
    "settings": {
        "import/resolver": {
            "typescript": {}
        }
    }
}